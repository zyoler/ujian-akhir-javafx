            <children>
               <Button fx:id="penjualanButton" contentDisplay="TOP" mnemonicParsing="false" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: orange;" styleClass="beranda" stylesheets="@../style.css" text="Penjualan">
