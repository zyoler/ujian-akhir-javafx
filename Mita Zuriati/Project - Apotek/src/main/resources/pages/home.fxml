               <Button fx:id="pembelianButton" contentDisplay="TOP" mnemonicParsing="false" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: orange;" styleClass="beranda" stylesheets="@../style.css" text="Pembelian">
                  <graphic>
                     <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../img/icons8-buy-30.png" />
