<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="300.0" style="-fx-background-color: orange;" styleClass="padding, spacing" stylesheets="/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.neophyte.controller.CreateObatController">
   <VBox layoutX="35.0" layoutY="30.0" styleClass="input-group">
      <children>
         <Label text="ID Obat" />
         <TextField fx:id="idObatField" promptText="ID Obat">
            <padding>
               <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </padding>
         </TextField>
      </children>
      <VBox.margin>
         <Insets bottom="20.0" left="25.0" right="25.0" top="25.0" />
      </VBox.margin>
   </VBox>

    <VBox styleClass="input-group">
        <Label text="Nama Obat"/>
        <TextField fx:id="namaObatField" promptText="Nama Obat">
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding></TextField>
        <VBox.margin>
            <Insets bottom="20.0" left="25.0" right="25.0" top="5.0" />
        </VBox.margin>
    </VBox>

    <VBox styleClass="input-group">
        <Label text="Harga Beli"/>
      <TextField fx:id="hargaBeliField" promptText="Harga Beli">
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </TextField>
        <VBox.margin>
            <Insets bottom="20.0" left="25.0" right="25.0" top="5.0" />
        </VBox.margin>
    </VBox>

    <VBox styleClass="input-group">
        <Label text="Harga Jual"/>
        <TextField fx:id="hargaJualField" promptText="Harga Jual">
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding></TextField>
        <VBox.margin>
            <Insets bottom="20.0" left="25.0" right="25.0" top="5.0" />
        </VBox.margin>
    </VBox>
   <VBox styleClass="input-group">
      <children>
         <Label text="Stok" />
         <TextField fx:id="stokField" promptText="Stok">
            <padding>
               <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </padding>
         </TextField>
      </children>
      <VBox.margin>
         <Insets bottom="20.0" left="25.0" right="25.0" top="5.0" />
      </VBox.margin>
   </VBox>

    <HBox prefHeight="25.0" prefWidth="243.0" styleClass="button-group">
        <Button fx:id="saveObatButton" onAction="#save" prefWidth="100.0" style="-fx-background-color: #3498DB;" text="Simpan">
            <HBox.margin>
                <Insets left="10.0" right="15.0" />
            </HBox.margin></Button>
        <Button fx:id="cancelObatButton" onAction="#close" prefWidth="100.0" style="-fx-background-color: #3498DB;" text="Batal">
            <HBox.margin>
                <Insets left="15.0" />
            </HBox.margin></Button>
        <VBox.margin>
            <Insets bottom="20.0" left="25.0" right="25.0" top="5.0" />
        </VBox.margin>
    </HBox>
</VBox>
