                     <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../img/icons8-about-50.png" />
                        </image>
                     </ImageView>
                  </graphic>
                  <effect>
                     <DropShadow />
                  </effect>
               </Button>
               <Button fx:id="logoutButton" contentDisplay="TOP" mnemonicParsing="false" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: orange;" styleClass="beranda" stylesheets="@../style.css" text="Keluar">
