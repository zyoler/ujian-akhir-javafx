<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="126" prefWidth="256" style="-fx-background-color: black;" styleClass="container" stylesheets="/style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="org.rental.controller.CreateAdminController">
    <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
        <Label textFill="#fffafa">Username :</Label>
        <TextField fx:id="usernameField" alignment="CENTER" promptText="Username" text="Masukan Username" VBox.vgrow="ALWAYS" />
      <VBox.margin>
         <Insets bottom="12.0" left="8.0" right="8.0" top="12.0" />
      </VBox.margin>
    </VBox>
    <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
        <Label textFill="#f8f5f5" VBox.vgrow="ALWAYS">Password :</Label>
        <PasswordField fx:id="passwordField" alignment="CENTER" promptText="Kata Sandi" VBox.vgrow="ALWAYS" />
      <VBox.margin>
         <Insets bottom="12.0" left="8.0" right="8.0" top="12.0" />
      </VBox.margin>
    </VBox>
    <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
        <Label textFill="#fcfafa">Nama :</Label>
        <TextField fx:id="nameField" alignment="CENTER" promptText="Nama Admin" VBox.vgrow="ALWAYS" />
      <VBox.margin>
         <Insets bottom="12.0" left="8.0" right="8.0" top="12.0" />
      </VBox.margin>
    </VBox>

    <HBox>
      <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" style="-fx-background-color: blue;" text="Simpan" textFill="#fcf8f8" VBox.vgrow="ALWAYS" />
         </children>
         <HBox.margin>
            <Insets bottom="12.0" left="8.0" right="8.0" top="12.0" />
         </HBox.margin>
      </VBox>
      <VBox alignment="TOP_RIGHT" prefHeight="25.0" prefWidth="157.0" HBox.hgrow="ALWAYS">
         <children>
              <Button fx:id="cancelButton" style="-fx-background-color: orange;" text="Batal" textFill="#fff9f9">Batal</Button>
         </children>
         <HBox.margin>
            <Insets bottom="12.0" left="8.0" right="8.0" top="12.0" />
         </HBox.margin>
      </VBox>
    </HBox>
</VBox>
