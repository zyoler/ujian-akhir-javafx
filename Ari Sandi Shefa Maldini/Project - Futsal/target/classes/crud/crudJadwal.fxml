<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="200.0" prefWidth="300.0" spacing="10.0" styleClass="padding, spacing" stylesheets="/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.neo.controller.CrudJadwal">

    <VBox styleClass="input-group">
        <Label text="Tanggal Main" />
        <DatePicker fx:id="tglMain" prefHeight="25.0" prefWidth="289.0" promptText="Tanggal Main" />
    </VBox>

    <VBox styleClass="input-group">
        <Label text="Jam" />
        <TextField fx:id="pukul" promptText="Jam" />
    </VBox>

    <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
        <Button fx:id="simpanButton" mnemonicParsing="false" text="Simpan"/>
        <Button fx:id="batalButton" mnemonicParsing="false" text="Batal"/>
    </HBox>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
