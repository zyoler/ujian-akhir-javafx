<VBox prefHeight="550.0" prefWidth="750.0" style="-fx-background-color: #ffffaa;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.neophyte.controller.HomeController">
   <HBox prefHeight="50.0" style="-fx-background-color: orange;">
      <children>
